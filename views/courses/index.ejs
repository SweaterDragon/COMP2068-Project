<%- include ('../partials/header') %>
<header>
  <h1>Swimming Courses</h1>
</header>

<hr>

<div class="content">
  <% for (let course of courses) { %>
    <div class="card my-5">

      <div class="card-body">
        <p class="card-text">
          Your swimming course is on <%= course.dateAndTime %> for <%= course.quantityOfSwimmers %>, lasting <%= course.duration %> hours and is in the <%= course.tier %> tier.
        </p>
      </div>

      <div class="card-footer text-muted">
        <a href="/courses/<%= course.id %>/edit"><i class="fa fa-edit">&nbsp;</i>Change your course</a>
        <br>
        <form class="form-inline" action="/courses/delete" method="post" onsubmit="return confirm('Are you sure you want to cancel your swimming course?');">
          <input type="hidden" value="<%= course.id %>" name="id">
          <button class="delete" type="submit">
            <i class="fa fa-trash">&nbsp;</i>
            Cancel your swimming course
          </button>
        </form>
      </div>
    </div>
  <% } %>
</div>
</div>
<%- include ('../partials/footer') %>