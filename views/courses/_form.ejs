<!--
  Step 1: The form must be sharable between the new and edit views.
-->
<form action="<%= (typeof actionPath === 'undefined') ? '/courses' : actionPath %>", method="POST"></form>
  <% if (typeof actionPath !== 'undefined') { %>
    <input type="hidden" name="id" value="<%= formData.id %>">
  <% } %>

  <div class="form-group">
    <label for="tier">Tier</label>
    <select name="course" class="form-control">
      <option>Select a difficult tier</option>
      <% for (let restaurant of restaurants) { %>
        <option <%= (tier === formData.tier) && 'selected' %> value="<%= tier %>"><%= tier %></option>
      <% } %>
    </select>
  </div>

  <div class="form-group">
    <label for="dateAndTime">Date and Time</label>
    <input type="datetime-local" name="dateAndTime" class="form-control" value="<%= formData.dateAndTime %>">
  </div>

  <div class="form-group">
    <label for="quantityOfSwimmers">Number of Swimmers</label>
    <input type="number" name="quantityOfSwimmers" class="form-control" value="<%= formData.quantityOfSwimmers %>" min="1" step="1"/>
  </div>

  <div class="form-group">
    <label for="duration">Course duration</label>
    <input type="number" name="duration" class="form-control" value="<%= formData.duration %>" min="1" step="1"/>
  </div>

  <div class="form-group">
    <button class="btn btn-dark">Submit</button>
  </div>
</form>




