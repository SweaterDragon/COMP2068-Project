<%- include ('../partials/header') %>
<div class="container my-5">
  <header>
    <h1>
      Your swimming course
    </h1>>
  </header>
  <hr>
  <p>
    Date and time: <%= course.dateAndTime %><br>
    Number of swimmers: <%= course.quantityOfSwimmers %><br>
    Duration: <%= course.duration %><br>
    Tier: <%= course.tier %> tier.
  </p>
  <hr>
  <div>
    <a href="/course/<%= course.id  %>/edit"><i class="fa fa-edit">&nbsp;</i>Change your swimming course</a>
    <br>
    <form class="form-inline" action="/courses/delete" method="post" onsubmit="return confirm('Are you sure you want to cancel your course?');">
      <input type="hidden" value="<%= course.id %>" name="id">
      <button class="delete" type="submit">
        <i class="fa fa-trash">&nbsp;</i>
        Cancel your swimming course
      </button>
    </form>
  </div>
</div>
<%- include ('../partials/footer') %>